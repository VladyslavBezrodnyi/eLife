@model eLifeWEB.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="card">
    <article class="card-body mx-auto" style="width: 100%; max-width: 500px;">
        <h4 class="card-title mt-3 text-center">Регістрація</h4>
        <hr />
        <p class="text-center">Створіть новий аккаунт</p>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                @Html.TextBoxFor(m => m.Email, new { placeholder = "E-mail адреса", @class = "form-control" })
            </div>
            <!-- form-group// -->

            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "form-control" })
            </div>
            <!-- form-group// -->

            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Повторіть пароль", @class = "form-control" })
            </div>
            <!-- form-group// -->

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Зареєструватися  </button>
            </div>
            <!-- form-group// -->
        }
    </article>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
