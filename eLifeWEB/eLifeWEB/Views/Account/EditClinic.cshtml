@model eLifeWEB.Models.Clinic
@Styles.Render("~/Content/RegisterClinicAdmin.css")
@{
    ViewBag.Title = "Редагування клініки";
}

<ol class="breadcrumb rounded-0 bg-white" style="margin: -24px -15px 0 -15px;">
    <li class="breadcrumb-item">@Html.ActionLink("Аккаунт", "MyAccount")</li>
    <li class="breadcrumb-item active">Редагувати клініку</li>
</ol>

@using (Html.BeginForm("EditClinic", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Image)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Назва клініки</label>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.2rem"><i class="fa fa-tag fa-2x"></i></div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Назва", @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger align-middle" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Адреса</label>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.2rem"><i class="fa fa-map-marker fa-2x"></i></div>
                    @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { placeholder = "Вулиця, номер будинку", @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger align-middle" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Опис</label>
        </div>
        <div class="col-md-6">
            <div class="form-group has-danger">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.2rem"><i class="fa fa-font fa-2x"></i></div>
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { placeholder = "Короткий опис Вашої клініки", @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger align-middle" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Банківська картка:</label>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.2rem"><i class="fa fa-credit-card fa-2x"></i></div>
                    @Html.EditorFor(model => model.BankCard, new { htmlAttributes = new { placeholder = "Номер банківської картки", @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.BankCard, "", new { @class = "text-danger align-middle" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Логотип Вашої клініки</label>
        </div>
        <div class="col-md-6">
            <div class="form-group files color">
                <input type="file" class="form-control" name="uploadImage" multiple="" id="inputFile">
            </div>
        </div>
        <div class="col-md-3">
            <img id="image_upload_preview" class="py-2" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <input type="submit" value="Зберегти" class="btn btn-primary btn-block" />
        </div>
    </div>
}

@Scripts.Render("~/bundles/jquery")
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image_upload_preview').attr('src', e.target.result);
                $('#image_upload_preview').attr('height', '170');
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#inputFile").change(function () {
        readURL(this);
    });
</script>
