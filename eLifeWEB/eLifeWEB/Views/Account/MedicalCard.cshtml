@model IEnumerable<eLifeWEB.Models.Record>

@{
    ViewBag.Title = "Медична карта";
}

<h2>Медична карта</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfService.Doctor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complaints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObjectiveData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnoses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseOfTheDisease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.Name)
        </td>
        <td>
            @Html.ActionLink(item.TypeOfService.Doctor.Name, "Details", "DoctorInforms", new { id = item.DoctorId }) |
            @Html.DisplayFor(modelItem => item.TypeOfService.Doctor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Complaints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ObjectiveData)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diagnoses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseOfTheDisease)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Appointment)
        </td>
    </tr>
}

</table>
