@{
    ViewBag.Title = "Оберіть роль";
}

<h2>Step 2</h2>

<h3">Оберіть, хто ви</h3">

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Display("Пацієнт")
        <div class="col-md-10">
            @Html.RadioButton("role", "patient")
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Доктор")
        <div class="col-md-10">
            @Html.RadioButton("role", "doctor")
        </div>
    </div>

    <div class="form-group">
        @Html.Display("Адміністратор клініки")
        <div class="col-md-10">
            @Html.RadioButton("role", "clinicAdmin")
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Обрати" class="btn btn-default" />
        </div>
    </div>
}

