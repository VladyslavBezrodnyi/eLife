@model eLifeWEB.Models.DoctorInform

<div>
    <h4>Робоча інформація</h4>
    <hr />
        @Html.Raw("<img style='height:200px;' src=\"data:image/jpeg;base64,"
                            + Convert.ToBase64String(Model.Image) + "\" />")
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Clinic.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Clinic.Name)
            @if (!Model.Practiced)
            {
                <div class="alert alert-dismissible alert-danger" style="width=200px;">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Клініка ще не пітвердила, що ви працюєте у них. Поки що інші коритувачі eLife не можуть перегрядати інформацію про вас, а ви не можете вести прийом!
                </div>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Guardian)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Guardian)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skills)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skills)
        </dd>

        @Html.ActionLink("Редагувати", "EditGeneralInfoDoctor", Model)
    </dl>
</div>
