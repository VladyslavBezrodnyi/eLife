@model eLifeWEB.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="text-center">Введіть адресу електронної пошти.</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            <label>Електронна пошта:</label>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.2rem"><i class="fa fa-tag fa-2x"></i></div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control  input_fix" })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-default btn-block" value="Відправити посилання по електронній пошті" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
