@model eLifeWEB.Models.Clinic
@using eLifeWEB.Models
@Styles.Render("~/Content/rating.css")
@{
    ViewBag.Title = Model.Name;
}

<ol class="breadcrumb rounded-0 bg-white" style="margin: -24px -15px 0 -15px;">
    <li class="breadcrumb-item">@Html.ActionLink("Клініки", "Index")</li>
    <li class="breadcrumb-item active">Детальніше</li>
</ol>
<hr class="m-0" />
<section>
    <div class="container py-3">
        <div class="card rounded-lg p-1 border-0">
            <div class="row ">
                <div class="col-sm-3 ">
                    <div class="card-image">

                    </div>
                    @Html.Raw("<img style='width: 100%; border-radius: 10%' src=\"data:image/jpeg;base64,"
                                             + Convert.ToBase64String(Model.Image) + "\" />")
                </div>
                <div class="col-sm-9 pl-0">

                    <div class="rating pt-2">
                        <div class="rating__value value">5.0</div>
                        <div class="rating__stars">
                            <div class="rating__stars-bg"></div>
                            <div style="width: 70%;" class="rating__stars-overlay"></div>
                        </div>
                    </div>

                    <div class="card-block px-3 pt-2">
                        <h4 class="card-title">Клініка "@Html.DisplayFor(model => model.Name)"</h4>
                        <div class="mx-0 mb-2">
                            @* Напиши здесь цикл перебора всех специализаций клиники *@
                            <span class="badge badge-pill badge-success">Спецализации</span>
                        </div>
                        <p class="card-text mb-2"><i class="fa fa-map-marker fa-2x" aria-hidden="true"></i> Адреса: <strong> @Html.DisplayFor(model => model.Adress)</strong></p>
                        @* раскомментируй, если будем показывать карту банка
                            <p class="card-text mb-2">
                                <i class="fa fa-credit-card fa-2x" aria-hidden="true"></i> Банківська картка: <strong>@Html.DisplayFor(model => model.BankCard)</strong>
                            </p>*@
                        <p class="card-text mb-2"><i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i> Опис: </p>
                        <p class="card-text" style="margin-top: -5px;">
                            @Html.DisplayFor(model => model.Description)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#doctors">Всі лікарі</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#feedback">Всі відгуки</a>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active show" id="doctors">
        @foreach (DoctorInform doctor in Model.DoctorInforms)
        {
            <div class="container col-11 mx-auto py-3">
                <div class="card rounded-lg p-1 shadw">
                    <div class="row ">
                        <div class="col-sm-3 ">
                            <div class="card-image">

                            </div>
                            @Html.Raw("<img style='width: 100%; border-radius: 10%' src=\"data:image/jpeg;base64,"
                                                        + Convert.ToBase64String(doctor.Image) + "\" />")
                        </div>
                        <div class="col-sm-9 pl-0">

                            <div class="rating pt-2">
                                <div class="rating__value value">5.0</div>
                                <div class="rating__stars">
                                    <div class="rating__stars-bg"></div>
                                    <div style="width: 70%;" class="rating__stars-overlay"></div>
                                </div>
                            </div>

                            <div class="card-block px-3 pt-2">
                                <h4 class="card-title">@Html.DisplayFor(model => doctor.ApplicationUsers.FirstOrDefault().Name)</h4>
                                <div class="mx-0 mb-1">
                                    <i class="fa fa-calendar-o  fa-2x" aria-hidden="true"></i>
                                    <strong>@Html.DisplayFor(modelItem => doctor.Guardian)</strong> досвіду в
                                    <span class="badge badge-pill badge-success">@Html.DisplayFor(modelItem => doctor.Specialization)</span>
                                </div>
