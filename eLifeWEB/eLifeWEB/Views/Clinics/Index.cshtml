@model IEnumerable<eLifeWEB.Models.Clinic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (item.Image != null)
            {
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(item.Image) + "\" />")
            }

        </td>
        <td>
            @foreach (var itemService in item.DoctorInforms)
            {
                <span class="badge badge-pill badge-success">@itemService.Specialization</span>
            }
        </td>
        @*<td>
            @foreach (var itemPrice in item.DoctorInforms)
            {
                foreach (var itemService in itemPrice.ApplicationUsers.FirstOrDefault().TypeOfServices)
                {
                    <span class="badge badge-pill badge-success">@itemService.Price</span>
                }
            }
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
