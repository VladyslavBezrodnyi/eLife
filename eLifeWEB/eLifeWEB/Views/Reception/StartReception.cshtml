                    @Html.EditorFor(model => model.CourseOfTheDisease, new { htmlAttributes = new { @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
