<h2 class="d-table mx-auto">Медична картка хворого</h2>
<table class="table">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendingDoctor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttendingDoctor.DoctorInform.Clinic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complaints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObjectiveData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseOfTheDisease)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnoses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointment)
        </th>
    </tr>
    @foreach (Record record in ViewBag.MedicalCard)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => model.Date.Date)
            </td>
            <td>
                @Html.DisplayFor(model => model.AttendingDoctor.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.AttendingDoctor.DoctorInform.Clinic)
            </td>
            <td>
                @Html.DisplayFor(model => model.Complaints)
            </td>
            <td>
                @Html.DisplayFor(model => model.ObjectiveData)
            </td>
            <td>
                @Html.DisplayFor(model => model.CourseOfTheDisease)
            </td>
            <td>
                @Html.DisplayFor(model => model.Diagnoses)
            </td>
            <td>
                @Html.DisplayFor(model => model.Appointment)
            </td>
        </tr>
    }
</table>

