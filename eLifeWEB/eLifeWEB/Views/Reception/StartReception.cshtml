@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="text-center">DoctorInform</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 field-label-responsive">
            @Html.LabelFor(model => model.Complaints, htmlAttributes: new { @class = "" })
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    @Html.EditorFor(model => model.Complaints, new { htmlAttributes = new { @class = "form-control input_fix" } })
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-control-feedback">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
