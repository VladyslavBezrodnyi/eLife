@model eLifeWEB.Models.DoctorInform
@using eLifeWEB.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>DoctorInform</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                   + Convert.ToBase64String(Model.Photo) + "\" />")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Users.FirstOrDefault().Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Clinic.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Clinic.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category_)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category_)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Guardian)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Guardian)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skills)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skills)
        </dd>

    </dl>
</div>
@if (Model.Users.FirstOrDefault().Feedbacks.Count != 0)
{
    <h3>
        @Html.DisplayName("Рейтинг")
    </h3>
    <br />
    <dd>
        @Model.Users.FirstOrDefault().Feedbacks.Average(s => s.Stars)

    </dd>
}
<div>
    <h3>Усі відгуки</h3>
    <table class="table">
        @foreach (Feedback feedback in Model.Users.FirstOrDefault().Feedbacks)
        {
            <tr>
                <td>
                    @feedback.Patient.Name
                </td>
                <td>
                    @feedback.Date
                </td>
                <td>
                    @feedback.Comment
                </td>
                <td>
                    @feedback.Stars
                </td>
            </tr>
        }
    </table>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
