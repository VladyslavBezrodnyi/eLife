@model eLifeWEB.Models.Record
@{
    ViewBag.Title = "AcceptAppointment";
}

<h2>AcceptAppointment</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">

    <div class="form-group">
        @Html.Label("CVV", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("card_cvv", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("card_exp_month", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("card_exp_month", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("card_exp_year", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("card_exp_year", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <input type="submit" value="Оплатити" />
</div>
}

